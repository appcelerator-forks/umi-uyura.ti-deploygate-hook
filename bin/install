#!/usr/bin/env node

var spawn = require('child_process').spawn,
    path  = require('path');

var xspawn = function(cmd,args) {
  if (process.platform === 'win32') {
    args = ['/c',cmd].concat(args);
    cmd = process.env.comspec;
  }
  return spawn(cmd,args);
};

var hooks = spawn('ti', ['config','-a','paths.hooks',path.join( __dirname ,'..', 'hooks')]);
hooks.stderr.pipe(process.stderr);
hooks.on('exit', function(code) {
  code === 0 && console.log('ti-deploygate-hook hook installed');
});
